{
  "name": "@mundus/workspace",
  "version": "0.0.1",
  "private": true,
  "description": "mundus",
  "keywords": [
    "@mundus/workspace"
  ],
  "license": "MIT",
  "author": "Salvatore Previti",
  "bugs": {
    "url": "https://github.com/SalvatorePreviti/mundus/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SalvatorePreviti/mundus.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "esrun --build --workspaces --dts",
    "test": "esrun --mocha test/**/*.ts",
    "generate-gl-constants": "node scripts/generate-gl-constants.cjs",
    "precommit": "npm run build && lint-staged && pretty-quick --staged",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ]
  },
  "devDependencies": {
    "@balsamic/eslint-config": "^0.0.19",
    "@balsamic/esrun": "^0.0.13",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "chai": "^4.3.4",
    "cheerio": "1.0.0-rc.10",
    "esbuild": "^0.12.8",
    "eslint": "^7.28.0",
    "eslint-plugin-chai-expect": "^2.2.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "fast-glob": "^3.2.5",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^9.0.0",
    "npm": "^7.16.0",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.3.2"
  }
}
